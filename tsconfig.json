{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "outDir": "./docs",
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "paths": {
      "@api": ["src/api"],
      "@components": ["src/components"],
      "@styles/*": ["src/styles/*"],
      "@reducers/*": ["src/reducers/*"],
      "@types": ["src/types"],
      "@utils": ["src/utils"],
      "@actions": ["src/actions"]
    }
  }
}